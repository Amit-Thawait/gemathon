<div class='center'>
  <%= form_tag(tareek_calc_day_path, remote: true, id: 'next_date_from_day', class: 'form-inline') do %>
    <%= text_field_tag 'day', '', class: 'span3', placeholder: 'Day(eg. Mon)', required: true %>
    <br /><br />
    <span id='result_day' class="span4 center" style="margin-left:35%">Enter Data</span>
    <br /><br />
    <%= submit_tag "Next date on a given day", class: 'span5' %>
  <% end %>
</div>
<script type="text/javascript">
  $(document).ready(
        function(){
             $("#next_date_from_day").bind("ajax:success",
                      function(evt, data, status, xhr){
                           $("#result_day").text('Date found: ' + data.date);
              }).bind("ajax:error", function(evt, data, status, xhr){
                       $("#result_day").text('Enter valid data')
              });
   });
</script>
